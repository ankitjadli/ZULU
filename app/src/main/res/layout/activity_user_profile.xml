<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userProfile"
    android:background="@drawable/chatbackground"

    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginTop="69dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blackrec"
        android:layout_below="@id/usersbarlayout"
        android:id="@+id/black_rec" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_prifile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/hackerimg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_prifile_image"
        android:text="USERNAME"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="26dp"
        android:id="@+id/usernameforprofile"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameforprofile"
        android:text="STATUS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:id="@+id/profilestatus"

        />

    <Button
        android:id="@+id/sendreqtouser"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/black_rec"
        android:layout_marginTop="250dp"
        android:background="@drawable/blankbttn"
        android:text="Send Friend Request"
       />
    <Button
        android:id="@+id/deletereq"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_below="@+id/sendreqtouser"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/blankbttn"
        android:text="Delete Friend Request"
        />


</RelativeLayout>