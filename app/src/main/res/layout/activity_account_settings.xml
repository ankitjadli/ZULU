<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account_settings">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:src="@drawable/defaultuser" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_image"
        android:text="USER NAME"
        android:textSize="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:id="@+id/userdefaultname"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userdefaultname"
        android:text="User default status"
        android:textSize="20dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:id="@+id/defaultstatus"
        />

    <Button
        android:id="@+id/changeprofileimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE IMAGE "
        android:layout_below="@+id/defaultstatus"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHANGE STATUS "
        android:layout_below="@+id/changeprofileimage"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="15dp"
        android:id="@+id/changestatus"/>



</RelativeLayout>