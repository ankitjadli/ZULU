<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatboyimage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/hackerimg" />

    <TextView
        android:id="@+id/nameofchatperson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="120dp"
        android:text="TextView"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="USER NAME" />

    <TextView
        android:id="@+id/last_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nameofchatperson"
        android:layout_marginTop="70dp"
        android:textSize="16sp"
        tools:text="Last known status" />
    <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/onlinedot"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="45dp"
        android:id="@+id/online_hai"
        android:visibility="invisible"/>

</RelativeLayout>